
<div class="row">
  <div class="restaurants-header">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

  {{#if reservations.length}}
  <ul class="collection">
    <div class="restaurants-h3">
    <h3>Current Reservations:</h3>
</div>
    {{#each reservations as |reservation|}}
    <li class="collection-item avatar">
      <img src="{{reservation.restaurant.image}}" alt="" class="circle">
      <span class="title">"{{reservation.restaurant.name}}"</span>
      <p>"{{reservation.restaurant.address}}"<br>
         "{{reservation.time}}"<br>
         "{{reservation.time}}"
      </p>
    </li>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/reservations.js"></script>